<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardBackgroundColor="#0090ff"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    android:layout_width="match_parent">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="68dp">


        <ImageView
            android:layout_width="35dp"
            android:src="@drawable/accept"
            android:layout_height="wrap_content"
            android:id="@+id/imageView26"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="14dp"
            android:layout_marginEnd="14dp"
            android:cropToPadding="true" />


        <ImageView
            android:layout_width="30dp"
            android:src="@drawable/arrow"
            android:layout_height="wrap_content"
            android:id="@+id/imageView27"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp" />

        <TextView
            android:text="نام مسافر : "
            android:gravity="center"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView17"
            android:layout_toRightOf="@+id/txtTemplateNameMsg"
            android:layout_toLeftOf="@+id/imageView26"
            android:layout_toStartOf="@+id/imageView26" />

        <TextView
            android:text="نام مسافر"
            android:gravity="center"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtTemplateNameMsg"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imageView26"
            android:layout_toStartOf="@+id/imageView26"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="80dp" />


    </RelativeLayout>

</android.support.v7.widget.CardView>