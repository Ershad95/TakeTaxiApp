<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="test.com.test.SignUp">


    <TextView

        android:text="ایمیل خود را وارد کنید "
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:id="@+id/txtEmail"
        android:layout_alignBottom="@+id/mail"
        android:layout_marginBottom="43dp"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="17sp"
        android:gravity="center"
        android:textDirection="ltr"
        android:text="رمز عبور را وارد کنید"
        android:id="@+id/txtPass"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/txt"
        android:id="@+id/mail"
        android:hint="ایمیل شما"
        android:layout_above="@+id/txtPass"
        android:layout_marginBottom="24dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        />

    <EditText
        android:hint="رمزباید بیش از 6کاراکتر باشد"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:inputType="textPassword"
        android:background="@drawable/txt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="#000"

        android:id="@+id/pass"
        android:layout_below="@+id/txtPass" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/user"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:id="@+id/imageView14"
        android:layout_alignBottom="@+id/txtEmail"
        android:layout_alignRight="@+id/mail"
        android:layout_alignEnd="@+id/mail"
        android:layout_below="@+id/imageView9" />

    <ImageView
        android:paddingTop="20dp"
        app:srcCompat="@drawable/diver"
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/txtEmail"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/key"
        android:id="@+id/imageView15"
        android:layout_alignBottom="@+id/txtPass"
        android:layout_alignRight="@+id/imageView14"
        android:layout_alignEnd="@+id/imageView14" />

    <RelativeLayout
        android:background="@drawable/footer"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp">

        <Button
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_back"
            android:textColor="#fff"
            android:text="بازگشت"
            android:onClick="OnReturn"
            android:id="@+id/btnRet"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp" />

        <Button
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:textColor="#fff"
            android:textSize="18sp"
            android:text="ثبت راننده"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_back"
            android:id="@+id/btnReg"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_alignBaseline="@+id/btnRet"
            android:layout_alignBottom="@+id/btnRet"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="text"
        android:gravity="center"
        android:hint="نام خود را وارد کنید"
        android:background="@drawable/txt"
        android:ems="10"
        android:id="@+id/edtname"
        android:layout_below="@+id/pass"
        android:layout_alignLeft="@+id/pass"
        android:layout_alignStart="@+id/pass"
        android:layout_marginTop="14dp"
        android:layout_alignRight="@+id/pass"
        android:layout_alignEnd="@+id/pass" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="text"
        android:gravity="center"
        android:hint="فامیلی خود را وارد کنید"
        android:background="@drawable/txt"
        android:ems="10"
        android:id="@+id/edtlname"
        android:layout_below="@+id/edtname"
        android:layout_alignLeft="@+id/edtname"
        android:layout_alignStart="@+id/edtname"
        android:layout_marginTop="16dp"
        android:layout_alignRight="@+id/edtname"
        android:layout_alignEnd="@+id/edtname" />

</RelativeLayout>
