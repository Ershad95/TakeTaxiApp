<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/add_back"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:textSize="18sp"
                android:text="اپراتور جدبد"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/AlertTittle"
                android:layout_weight="1" />

            <ImageView
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/add"
                android:id="@+id/imgAlert"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:layout_width="100dp" />
        </LinearLayout>

    <TextView
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_marginRight="20dp"
        android:text="نام شما : "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView8" />

    <EditText
        android:hint="-----------------"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edtNewName" />

    <TextView
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
        android:text="فامیلی شما : " />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="---------------------"
        android:textAlignment="center"
        android:id="@+id/edtNewLname" />

    <TextView
            android:text="نام کاربری اپراتور جدید"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="---------------"
                android:textAlignment="center"
                android:ems="10"
                android:id="@+id/edtnewUser"
                android:layout_weight="1" />

        </LinearLayout>

    <TextView
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginRight="20dp"
            android:text="رمز عبور اپراتور جدید"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:hint="-------------"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/edtNewPass"
                android:layout_weight="1" />

        </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:src="@drawable/sy"
                android:layout_margin="10dp"

                android:text="ثبت اپراتور"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/btnSubmit"
                android:layout_weight="1" />

            <ImageView
                android:text="انصراف"
                android:src="@drawable/close"
                android:layout_margin="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/btnCancel"
                android:layout_weight="1" />
        </LinearLayout>

</LinearLayout>