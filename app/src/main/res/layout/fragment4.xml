<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#0077ff"
    android:id="@id/group"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="ثبت نام در برنامه"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="30sp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp" />


    <TextView
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:text="با ثبت نام در برنامه می توانید از امکانات برنامه استفاده کنید"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/textView" />

    <ImageView
        android:src="@drawable/login"
        android:layout_height="100dp"
        android:id="@+id/imageView1"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp"
        android:layout_width="120dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="58dp" />

    <Button
        android:text="برو به برنامه"
        android:textColor="#008cff"
        android:textStyle="bold"
        android:textSize="16sp"
        android:background="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/imageView1"
        android:layout_alignEnd="@+id/imageView1"
        android:layout_marginBottom="10dp"
        android:id="@+id/btnGo" />

    <CheckBox
        android:textStyle="bold"
        android:buttonTint="#fff"
        android:theme="@style/operator"
        android:checked="false"
        android:textSize="16sp"
        android:padding="10dp"
        android:textColor="#fff"
        android:layoutDirection="rtl"
        android:text="دفعات بعدی نمایش نده !!!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkbox_intro"
        android:layout_above="@+id/btnGo"
        android:layout_alignRight="@+id/btnGo"
        android:layout_alignEnd="@+id/btnGo" />

    <ImageView
        android:layout_width="100dp"
        android:src="@drawable/user"
        android:layout_height="120dp"
        android:id="@+id/imageView6"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_alignTop="@+id/imageView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>