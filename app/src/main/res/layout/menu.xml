<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:background="#faaa16"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    app:cardBackgroundColor="#ffb300">


    <RelativeLayout
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/diver"
            android:id="@+id/imageView" />


        <ImageView
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_delete"
            android:id="@+id/imageView2" />

        <TextView
            android:textColor="#fff"
            android:text="Download"
            android:gravity="center"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:id="@+id/txttxt"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_weight="0.49"
            android:layout_alignTop="@+id/imageView2"
            android:layout_toRightOf="@+id/imageView" />

        <TextView
            android:gravity="center"
            android:padding="10dp"
            android:text="Upload"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txttxttxt"
            android:layout_marginRight="11dp"
            android:layout_marginEnd="11dp"
            android:layout_alignBaseline="@+id/txttxt"
            android:layout_alignBottom="@+id/txttxt"
            android:layout_toLeftOf="@+id/imgstatus"
            android:layout_toStartOf="@+id/imgstatus" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ready_status"
            android:id="@+id/imgstatus"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:layout_alignTop="@+id/imageView2"
            android:layout_toLeftOf="@+id/imageView2"
            android:layout_toStartOf="@+id/imageView2" />

    </RelativeLayout>


</android.support.v7.widget.CardView>