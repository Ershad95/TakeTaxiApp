<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/back_msg_details"
    android:id="@+id/parent_msg_deatils"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/msg_icon"
        android:id="@+id/img_msg_details" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:background="@drawable/shadow"
            android:layout_height="10dp"></View>
    </FrameLayout>
    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#fff"
            android:layout_weight="0.79"
            android:gravity="center"
            android:text="ارشاد رئوفی"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtPassengerName" />

        <TextView
            android:textSize="16sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_weight="1"
            android:text=" نام مسافر : "

            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" />
    </LinearLayout>



    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_weight="0.92"
            android:gravity="center"
            android:text="09216542893"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtPassemgerTel" />

        <TextView
            android:textSize="16sp"
            android:layout_weight="0.82"
            android:text="شماره تلفن : "
            android:padding="10dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" />
    </LinearLayout>

    <TextView
        android:padding="10dp"
        android:textSize="16sp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="match_parent"
        android:text="آدرس مسافر : "
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:text="کرج میدان آزادگان بلوار امام رضا ساختمان نفیس پلاک7"
        android:textSize="16sp"
        android:id="@+id/txtPassemgerAddress"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_height="wrap_content" />
    <TextView
        android:padding="10dp"
        android:textSize="16sp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:text="مقصد : "
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:text="کرج میدان آزادگان بلوار امام رضا ساختمان نفیس پلاک7"
        android:textSize="16sp"
        android:id="@+id/txtPassemgerDestination"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_height="wrap_content" />


    <FrameLayout
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="@drawable/shadow"
            android:layout_width="match_parent"
            android:layout_height="5dp"></View>
    </FrameLayout>



    <android.support.design.widget.FloatingActionButton
        android:visibility="gone"
        android:layout_marginBottom="10dp"
        android:layout_width="50dp"
        android:id="@+id/fabResend"
        app:backgroundTint="#ff0000"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/send"
        android:layout_height="50dp" />


</LinearLayout>