<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/operator_back"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="60dp"
        android:weightSum="1">

        <TextView
            android:textStyle="bold"
            android:textColor="#fff"
            android:text="قیمت سرویس را وارد کنید"
            android:padding="10dp"
            android:gravity="start"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:layout_weight="0.93" />

        <ImageView

            android:layout_width="50dp"
            android:src="@drawable/m"
            android:layout_height="match_parent"
            android:id="@+id/imageView8" />

    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/shadow"></View>
    </FrameLayout>

    <EditText
        android:background="@drawable/txt_operator"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:hint="قیمت به تومان"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/edtPrice" />

    <LinearLayout

        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgPriceSubmit"
                android:layout_width="match_parent"
                android:src="@drawable/accept"
                android:layout_height="40dp" />
            <TextView
                android:textStyle="bold"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:text="ثبت"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgPriceClose"
                android:layout_width="match_parent"
                android:src="@drawable/close"
                android:layout_height="40dp" />
            <TextView
                android:textStyle="bold"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:gravity="center"
                android:layout_width="match_parent"
                android:text="بستن"
                android:textSize="16sp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>